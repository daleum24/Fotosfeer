<h1>Edit Photo</h1>

<form action="<%= photo_url(@photo.id) %>" action="post">
	<input type="hidden"
		   name="_method"
		  value="put">
	
	<label>Title
	    <input type="text" name="photo[title]" value="<%= @photo.title %>">
	</label>
	
	<label>Description
	    <input type="text" name="photo[title]" value="<%= @photo.description %>">
	</label>
	
	<input type="submit" value="Edit Photo">
	
</form>

<%= button_to "Delete Photo", photo_url(@photo.id), method: :delete %>